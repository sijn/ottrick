<h1>Listing tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Message</th>
      <th>Tickets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.subject %></td>
        <td><%= task.message %></td>
        <td> 
          <%= content_tag_for(:span, task.tickets) do |ticket| %>
            <%= otrs_ticket_link(ticket, :number) %>
          <% end %>
        </td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
